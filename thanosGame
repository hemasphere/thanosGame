    public static void main(String[]args)
    {
        String name;
        String Thanos;
        String Planet;
        String Side;
        name = name();
        JOptionPane.showMessageDialog(null, "Hello " + name + ". Welcome to your mission", "Greetings", 0, null);
        JOptionPane.showMessageDialog(null, "Your mission is to retreive Thanos's gaulet", "Mission", 0, null);
        String[] options = {"Planet 51", "Planet 2"};
        int planet = JOptionPane.showOptionDialog(null, name + ", which planet would you like to go to?", "Planet", 0, 0, null, options, null);
        if (planet == 0) 
        {
            Planet = ". You chose Planet 51.";
            String[] options1 = {"left side", "right side"};
            int side = JOptionPane.showOptionDialog(null, "would you like to explore the right side or left side?", "Side", 0, 0, null, options1, null);
            if (side == 1) 
            {
               Side = " You chose the right side.";
               Thanos = Thanos();
               JOptionPane.showMessageDialog(null, "Summary: \n Your name is " + name + Planet + Side + Thanos + ". Thank you for playing");
            } 
            else 
            {
                Side = " You chose the left side";
                String childrenOfThanos = childrenOfThanos();
                JOptionPane.showMessageDialog(null, "Summary: \n Your name is " + name + Planet + Side + childrenOfThanos  + ". Thank you for playing :)");
                
                
            }
        } 
        else 
        {
            String[] options1 = {"left side", "right side"};
            int side = JOptionPane.showOptionDialog(null, "would you like to explore the right side or left side?", "Side", 0, 0, null, options1, null);
            if (side == 0) 
            {
                int knowRockDude = JOptionPane.showConfirmDialog(null, "hey man, do you know who I am?", "Korg", 0, 0, null);
                if (knowRockDude == 0) 
                {
                    String favCharacter = JOptionPane.showInputDialog("AYY, whose your favorite character from the movie Thor Rag...?");
                    if (favCharacter.equals("Thor")) 
                    {
                        String favFeature = JOptionPane.showInputDialog("Oh hey, the God of Thunder is greattt, what do you like most about him");
                        if (favFeature.equals("Hammer")) 
                        {
                            JOptionPane.showMessageDialog(null, "Oh yeah his hammer is great, I'm thinking about getting one of those my self", "Fav Feature", 0, null);
                        } 
                        else 
                        {
                            JOptionPane.showMessageDialog(null, "Oh yeah that's cool, his hair is nice too but look at that hammer of hisss", "Fav Feature", 0, null);
                        }
                    } 
                    else if (favCharacter.equals("you") || favCharacter.equals("korg")) 
                    {
                        JOptionPane.showMessageDialog(null, "Oh stop you're too sweet", "", 0, null);
                    } 
                    else 
                    {
                        String[] option10 = {"I'm looking for Thanos"};
                        JOptionPane.showOptionDialog(null, "Oh nice. Hey so what are you here for?", "", 0, 0, null, option10, null);
                        int help = JOptionPane.showConfirmDialog(null, "Oh, I see. I know where he is, do you want to know?", "", 0, 0, null);
                        if (help == 0) 
                        {
                            JOptionPane.showMessageDialog(null, "Okay, well get onto the spaceship and I'll bring you to him", "", 0, null);
                            JOptionPane.showMessageDialog(null, "You get onto to the spaceship and seconds later arrive to Planet 51", "", 0, null);
                            JOptionPane.showMessageDialog(null, "Alright dude, here you are. Good Luck", "", 0, null);
                            Thanos();
                        } 
                        else 
                        {
                            JOptionPane.showMessageDialog(null, "Oh, okay well I need to go and sadly must kick you out. Have a safe trip home. Bye", "Bye", 0, null);
                            JOptionPane.showMessageDialog(null, "Mission failed :(", "End Game", 0, null);
                        }
                    }

                } 
                else 
                {
                    JOptionPane.showMessageDialog(null, "I'm Korg, nice to meet you", "Meeting Korg", 0, null);
                    String[] option10 = {"I'm looking for Thanos"};
                    JOptionPane.showOptionDialog(null, "Oh nice. Hey so what are you here for?", "", 0, 0, null, option10, null);
                    int help = JOptionPane.showConfirmDialog(null, "Oh, I see. I know where he is, do you want to know?", "", 0, 0, null);
                    if (help == 0) 
                    {
                        JOptionPane.showMessageDialog(null, "Okay, well get onto the spaceship and I'll bring you to him", "", 0, null);
                        JOptionPane.showMessageDialog(null, "You get onto to the spaceship and seconds later arrive to Planet 51", "", 0, null);
                        JOptionPane.showMessageDialog(null, "Alright dude, here you are. Good Luck", "", 0, null);
                        Thanos();  
                    }
                }
            }
            
            else
            {
                
            }
         }
      }
 
            
        
    
           
    public static void wrongQuestion()
    {
        JOptionPane.showMessageDialog(null, "Ha, Good bye", "Defeat", 0, null);
        JOptionPane.showMessageDialog(null, "Mission failed :(", "End Game", 0, null);
    }
    
